##########################
# Aliases
#########################

# Function aliases
alias tch="create"
alias touch="create"

# Shell aliases
alias mkdir="mkdir -p" # Create a directory recursively by default
alias here="open ./" # Open the cwd in Finder
alias cpd="cp -ivR" # Copy directory

# Sublime Text
alias st="subl ./"
alias sp="subl --command toggle_full_screen --project *.sublime-project"
alias snippets="subl ~/Dropbox/Application\ Files/Sublime\ Text\ 3/Packages/User/Snippets/"

# MySQL
alias mysqlfix="vagrant ssh -c 'sudo mv /var/lib/mysql/mysql.sock /var/lib/mysql/mysql.sock.bak; sudo service mysqld start'" # Fixes CentOS MySQL weirdness
alias mysql-fix=mysqlfix
alias fixmysql=mysqlfix
alias fix-mysql=mysqlfix

# Fuel PHP
alias oil="vssh php oil"
alias phinx="vssh ./fuel/vendor/bin/phinx"
alias migrate="vagrant ssh -c 'cd /vagrant/ && ./fuel/vendor/bin/phinx migrate && ./fuel/vendor/bin/phinx migrate -e testing'"
alias rollback="vagrant ssh -c 'cd /vagrant/ && ./fuel/vendor/bin/phinx rollback && ./fuel/vendor/bin/phinx rollback -e testing'"


# Tmux aliases
alias list="tmux list-sessions"
alias kill="tmux kill-session -t $(tmux display-message -p '#S')"
alias new="mux copy default"
alias start="mux start"
alias switch="tmux switch-client -t"

# Git Aliases
alias m="git commit -m"
alias a="git add -i"
alias s="git status -sb"
alias add="git add --all"
alias latest="git add --all && git commit -m 'Latest Build'"
alias save="git add -A && git commit -m 'SAVE POINT'"
alias init="git init && git flow init"

alias amend="git commit --amend"
alias undo="git reset HEAD@{1}"
alias wipe="git add -A && git commit -qm 'WIPE SAVE POINT' && git reset HEAD~1 --hard"

alias co="git checkout"
alias checkout="git checkout"
alias develop="git checkout develop"
alias master="git checkout master"
alias dev="git checkout develop"

alias stash="git stash"
alias unstash="git stash pop"

alias gdiff="git difftool"
alias conflicts='git status --short | grep "^[^ ][^ ] "'
alias c=conflicts
alias conflict="git mergetool"
alias merge="git merge"
alias branch="git branch"
alias branches="git branch -la"
alias gcp="git cherry-pick"

alias push="git push"
alias p="git push"
alias pusha="git push --all"
alias pa="git push --all"
alias pull="git pull --rebase --prune && git submodule sync --recursive && git submodule update --init --recursive"
alias pull-theirs="git fetch && git reset --hard origin/master"

alias submodule="git submodule"
alias sminit="git submodule init; git submodule update"

alias reflog="git reflog"
alias log="git log --color --graph --pretty=format:'%Cgreen%h%Creset %C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit | cat -n | less"
alias filelog="git log --color --graph --pretty=format:'%Cgreen%h%Creset %C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit -p"
alias today="git log --color --graph --pretty=format:'%Cgreen%h%Creset %Cblue(%cr) %C(yellow)%d%Creset %s%Creset' --abbrev-commit --since=midnight --author='Mark Wales'"
alias cf="git diff-tree --no-commit-id --name-only -r"
alias gf="git log --color --pretty=format:'%Cgreen%h%Creset %s' --abbrev-commit | grep -i"

alias reset="git reset"
alias changes="git diff --cached"

# Git Flow
alias feature="git flow feature"
alias release="git flow release"
alias hotfix="git flow hotfix"
alias support="git flow support"

# Server
alias shc="ssh shc"
alias sites="ssh shc ls /var/www"

# Misc
alias vi="vim"
alias vat="cat"
alias chromeXorigin="killall Google\ Chrome\ Canary 2> /dev/null; open -a Google\ Chrome\ Canary --args -disable-web-security"
alias diff="icdiff"
alias rm="trash"
alias rmdir="trash"
alias cy="rsync -a"
alias psg="ps -e | grep -v grep | grep"
alias dns="sudo killall -HUP mDNSResponder"
alias sshkey="ssh-keygen -t rsa -C 'mark@smallhadroncollider.com' && echo 'Use ssh-add to add to Keychain'"
alias ssh-add="ssh-add -K"
alias sha1="openssl sha1"
alias artisan="vssh php artisan"
alias vmid="VBoxManage list vms"
alias sk="skeleton"
